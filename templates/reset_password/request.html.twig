{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe - Salle de sport{% endblock %}

{% block pageTitle %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="main">
        <div class="card">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary">Valider</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}